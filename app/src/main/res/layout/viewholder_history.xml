<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/picHistory"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        android:src="@drawable/turk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="title"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:fontFamily="@font/lobstertwo_regular"
        app:layout_constraintStart_toEndOf="@+id/picHistory"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="eachPrice"
        android:textSize="18sp"
        android:fontFamily="@font/lobstertwo_regular"
        android:textColor="@color/darkGrey"
        app:layout_constraintStart_toStartOf="@+id/titleHistory"
        app:layout_constraintTop_toBottomOf="@+id/titleHistory" />

    <TextView
        android:id="@+id/totalAmountHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paidAmount"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/lobstertwo_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/priceHistory" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/orderReceivedBtn"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/tick_green_"
            app:layout_constraintBottom_toTopOf="@+id/totalQuantityHistory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalQuantityHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ouantity"
            android:textColor="@color/darkGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
